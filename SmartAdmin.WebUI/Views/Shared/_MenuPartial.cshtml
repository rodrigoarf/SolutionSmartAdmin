                <li>
                    <a href="/Newsletter/Templates"><i class="fa fa-picture-o"></i>Templates</a>
                </li>
            </ul>
        </li>
        <li class="top-menu-hidden">
            <a href="#"><i class="fa fa-lg fa-fw fa-cube txt-color-blue"></i><span class="menu-item-parent">Administração</span></a>
            <ul>
                <li>
                    <a href="/Usuario/Index"><i class="fa fa-stack-overflow"></i>Usuários</a>
                </li>
                <li>
                    <a href="/Menu/Index"><i class="fa fa-cube"></i>Menus</a>
                </li>
                <li>
                    <a href="/Historico/Index"><i class="fa fa-pencil"></i>Histórico</a>
                </li>
                <li>
                    <a><i class="fa fa-bug"></i>Bugs</a>
                </li>
            </ul>
        </li>
    </ul>
</nav>


 @if (Model.CollectionMenusAndSubMenus.Count > 0)
 { 
     <nav>
         <ul>
             @foreach (var MenusAndSubMenu in Model.CollectionMenusAndSubMenus)
             {
                 <li>
                     <a href="@((!String.IsNullOrEmpty(MenusAndSubMenu.Menu.CONTROLLER) ? String.Format(@"/{0}/{1}", MenusAndSubMenu.Menu.CONTROLLER, MenusAndSubMenu.Menu.ACTION) : String.Format("{0}","#")))"><i class="fa fa-lg fa-fw @MenusAndSubMenu.Menu.ICONE txt-color-blue"></i><span class="menu-item-parent">@MenusAndSubMenu.Menu.NOME</span></a>
                     @if (MenusAndSubMenu.CollectionSubMenu.Count > 0)
                     {
                         <ul>
                             @foreach (var SubMenu in MenusAndSubMenu.CollectionSubMenu)
                             {
                                 <li>
                                     <a href="@String.Format(@"/{0}/{1}", SubMenu.CONTROLLER, SubMenu.ACTION)">@((!String.IsNullOrEmpty(SubMenu.ICONE)) ? Html.Raw(String.Format("<i class=\"fa {0}\"></i> {1}",SubMenu.ICONE, SubMenu.NOME)) : Html.Raw(String.Format("{1}", SubMenu.NOME)))</a>
                                 </li>  
                             }
                         </ul>
                      }
                 </li>
             }
         </ul>
     </nav>
 }

<span class="minifyme" data-action="minifyMenu"><i class="fa fa-arrow-circle-left hit"></i></span>






@using PagedList.Mvc;
@model PagedList.IPagedList<SmartAdmin.Dto.BancoDto>  
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
            <i class="fa-fw fa fa-home"></i>Agências Bancárias
        </h1>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-8 text-right"></div>

    <div class="col-md-12">
        <div class="row">
            <article class="col-sm-12">
                <div class="jarviswidget jarviswidget-color-blueDark" id="widget-busca">
                   @Html.Partial("BancoFiltroPartial", new SmartAdmin.Dto.BancoDto())
                </div>
            </article>
        </div>
    </div>

    <div class="col-md-12">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div id="Grid" class="jarviswidget jarviswidget-color-blueDark">
                   @Html.Partial("BancoGridPartial", Model)
                </div>
            </article>
        </div>
    </div>
</div> 

<div class="modal fade" id="modal-banco-create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    @Html.Partial("BancoCreatePartial", new SmartAdmin.Dto.BancoDto());
</div> 

<div class="modal fade" id="modal-banco-edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div> 

<script src="/Script/Financeiro/Banco.js" type="text/javascript"></script>
<script type="text/javascript">  
    @((!String.IsNullOrEmpty(ViewBag.Mensagem)) ? Html.Raw("PrintAlert(\"" + ViewBag.Mensagem + "\");") : null) 
</script>




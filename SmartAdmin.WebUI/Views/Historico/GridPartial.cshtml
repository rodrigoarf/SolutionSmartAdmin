@using PagedList.Mvc;
@model PagedList.IPagedList<SmartAdmin.Data.Model.AcessoDto>  
<header>
    <span class="widget-icon"><i class="fa fa-edit"></i></span>
    <h2>Histórico de Acesso</h2>
</header>
<div>
    <div class="widget-body no-padding">
        <div class="smart-form">
            <table id="datatable_tabletools" class="table table-striped table-bordered table-hover smart-form" style="border:0;">
                    <thead>
                        <tr>
                            <th class="text-center" style="vertical-align: top; width: 120px;">Usuário</th>
                            <th class="text-center" style="vertical-align: top; width: 125px;">Acesso</th>
                            <th class="text-center" style="vertical-align: top; width: 120px;">IPv6</th>
                            <th class="text-center" style="vertical-align: top; width: 120px;">Resolução</th>
                            <th class="text-center" style="vertical-align: top; width: 120px;">Browser</th>
                            <th class="text-center" style="vertical-align: top;">Controller/Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="text-left">@(item.COD_USUARIO)</td>
                            <td class="text-center">@item.DTH_ACESSO</td>
                            <td class="text-center">@item.IP</td>
                            <td class="text-center">@item.RESOLUCAO</td>
                            <td class="text-center">@item.BROWSER</td>
                            <td class="text-left">@item.URL_ACESSO</td>
                        </tr>  
                        }  
                    </tbody>
                </table>
                <footer class="text-center" style="padding-top: 25px; padding-bottom: 25px;">        
                        @Html.PagedListPager(Model, Page => Url.Action("Index", new {Page}),PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
                        new PagedListRenderOptions { LinkToPreviousPageFormat="<i class=\"fa fa-chevron-left\"></i>", LinkToNextPageFormat = "<i class=\"fa fa-chevron-right\"></i>", Display = PagedListDisplayMode.IfNeeded, DisplayLinkToNextPage = PagedListDisplayMode.Always},
                        new System.Web.Mvc.Ajax.AjaxOptions {OnSuccess = "OnPageChanged"}))      
                </footer>
        </div>
    </div>
</div>

